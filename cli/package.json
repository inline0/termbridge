{
  "name": "termbridge",
  "version": "0.1.1",
  "type": "module",
  "description": "Local-first terminal beaming with tmux + Cloudflare tunnel and a mobile-friendly UI.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inline0/termbridge.git"
  },
  "bugs": {
    "url": "https://github.com/inline0/termbridge/issues"
  },
  "homepage": "https://github.com/inline0/termbridge#readme",
  "keywords": [
    "terminal",
    "tmux",
    "tunnel",
    "cloudflare",
    "cli",
    "mobile",
    "xterm"
  ],
  "bin": {
    "termbridge": "dist/bin.js"
  },
  "scripts": {
    "build": "bun run ui:build && bunx tsup",
    "dev": "bun run ui:dev",
    "start": "node dist/bin.js",
    "lint": "biome lint .",
    "typecheck": "tsc -p tsconfig.json",
    "ui:dev": "vite --config vite.config.ts",
    "ui:build": "vite build --config vite.config.ts",
    "prepack": "bun run build"
  },
  "files": [
    "dist",
    "ui/dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "ink": "^6.6.0",
    "node-pty": "^1.1.0",
    "qrcode-terminal": "^0.12.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@silk-hq/components": "^0.10.0",
    "@tanstack/react-router": "^1.151.6",
    "@termbridge/shared": "workspace:*",
    "@termbridge/terminal": "workspace:*",
    "@termbridge/tunnel": "workspace:*",
    "@termbridge/ui": "workspace:*",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^6.0.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-react": "^5.1.2",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.5.1",
    "vite": "^7.3.1"
  }
}
