{
  "name": "termbridge",
  "version": "0.0.0",
  "type": "module",
  "bin": {
    "termbridge": "./dist/bin.js"
  },
  "scripts": {
    "build": "bun run ui:build && bunx tsup",
    "dev": "bun run ui:dev",
    "start": "node dist/bin.js",
    "lint": "biome lint .",
    "typecheck": "tsc -p tsconfig.json",
    "ui:dev": "vite --config vite.config.ts",
    "ui:build": "vite build --config vite.config.ts"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.151.3",
    "@termbridge/shared": "workspace:*",
    "@termbridge/terminal": "workspace:*",
    "@termbridge/tunnel": "workspace:*",
    "ink": "^5.0.1",
    "qrcode-terminal": "^0.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.3",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@types/qrcode-terminal": "^0.12.2",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.0.2",
    "tsup": "^8.5.0",
    "vite": "^7.1.7"
  }
}
